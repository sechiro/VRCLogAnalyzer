<Window x:Class="VRCLogAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRCLogAnalyzer"
        mc:Ignorable="d"
        Title="VRCLogAnalyzer"
        Height="600"
        Width="800"
        ResizeMode="CanResizeWithGrip"
        ContentRendered="Window_ContentRendered">
  <Grid>
    <DockPanel Grid.ColumnSpan="2">
      <Menu DockPanel.Dock="Top">
        <MenuItem Header="設定(_S)">
          <MenuItem Header="データ更新(_U)"
                    Click="Button_UpdateDb" />
          <Separator />
          <MenuItem Header="データ保存場所変更(_S)"
                    Click="Button_Settings" />
        </MenuItem>
        <MenuItem Header="エクスポート(_E)">
          <MenuItem Header="ユーザーデータ(_U)"
                    Click="Button_ExportUser" />
          <MenuItem Header="ワールドデータ(_U)"
                    Click="Button_ExportWorld" />
        </MenuItem>
        <MenuItem Header="ヘルプ(_H)">
          <MenuItem Header="はじめて利用される方へ(_U)"
                    Click="Button_FirstHelp" />
          <MenuItem Header="README(_R)※ブラウザが開きます"
                    Click="Button_Readme" />
          <Separator />
          <MenuItem Header="クレジット(_C)"
                    Click="Button_Credit" />
        </MenuItem>
      </Menu>
    </DockPanel>
    <DockPanel>
      <StackPanel DockPanel.Dock="Top">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="430" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>
          <StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="40"
                        Margin="2 20 10 0">
              <Label x:Name="Label1"
                     Height="30"
                     Width="80"
                     HorizontalContentAlignment="Right"
                     Content="開始日：" />
              <DatePicker x:Name="StartDate"
                          Height="24"
                          Width="120" />
              <Label x:Name="Label2"
                     Height="30"
                     Width="80"
                     HorizontalContentAlignment="Right"
                     Content="終了日：" />
              <DatePicker x:Name="EndDate"
                          Height="24"
                          Width="120" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Height="30"
                        Margin="2 0 10 4">
              <Label x:Name="Label3"
                     Height="24"
                     Width="80"
                     HorizontalContentAlignment="Right"
                     Content="ユーザー名：" />
              <TextBox x:Name="QueryUsername"
                       ToolTip="大文字小文字を区別しない部分一致"
                       Height="24"
                       Width="120" />
              <Label x:Name="Label4"
                     Height="24"
                     Width="80"
                     HorizontalContentAlignment="Right"
                     Content="ワールド名：" />
              <TextBox x:Name="QueryWorldname"
                       ToolTip="大文字小文字を区別しない部分一致"
                       Height="24"
                       Width="120" />
            </StackPanel>
          </StackPanel>
          <Grid Grid.Column="1"
                Grid.RowSpan="2">
            <Button x:Name="SearchButton"
                    Height="58"
                    Width="100"
                    Margin="0 28 0 10"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Center"
                    Content="検索"
                    Click="Button_UpdateView" />
          </Grid>
        </Grid>
        <TextBlock x:Name="loadingText"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   TextWrapping="Wrap"
                   Text="ログデータ解析中です。しばらくお待ちください。"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   Visibility="Collapsed" />
      </StackPanel>
      <TreeView x:Name="HistoryTree"
                Margin="10 0 10 10">
        <TreeView.ItemTemplate>
          <HierarchicalDataTemplate DataType="local:Dto"
                                    ItemsSource="{Binding Dtos}">
            <TextBlock Text="{Binding Name}"
                       ToolTip="{Binding Desc}">
              <TextBlock.ContextMenu>
                <ContextMenu>
                  <MenuItem Header="名前をコピー" Click="MenuItem_Click" />
                </ContextMenu>
              </TextBlock.ContextMenu>
            </TextBlock>
          </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
      </TreeView>
    </DockPanel>
  </Grid>
</Window>